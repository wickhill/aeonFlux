<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Citizen Dossiers</title>
    <style>
        .dossier-list {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: space-evenly;
            align-items: baseline;
            list-style-type: none;
            gap: 10px 30px;
        }

        .dossier-image {
            width: 400px;
            height: 400px;
            border: 5px solid rgb(231, 193, 96);
        }
    </style>
</head>
<body>
    <h1>Citizen Dossiers</h1>
    <h4><a href="/">Kiosk Homepage</a></h4>
    <ul class="dossier-list">
        <% citizens.forEach(function(citizen) { %>
            <li>
                <img src="<%= citizen.img %>" alt="<%= citizen.name %>" class="dossier-image">
                <p>name: <%= citizen.name %></p>
                <p>nationality: <%= citizen.nationality %></p>
                <p>confirmed spy: <%= citizen.is_spy %></p>
                <p>requires investigation: <%= citizen.requiresInvestigation %></p>
            </li>
        <% }) %>
    </ul>
    <h4><a href="/">Kiosk Homepage</a></h4>
</body>
</html>
